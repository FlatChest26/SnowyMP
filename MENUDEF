	Option "Time To Bleed Out", "snowy_mp__bleed_out_timer", BleedOutTimerValues, "snowy_mp__allow_reviving"
	Option "Allow Movement While Reviving", "snowy_mp__move_while_reviving", YesNo, "snowy_mp__allow_reviving"
	Option "Keep Holding Weapon While Reviving", "snowy_mp__keep_weapon_while_reviving", YesNo, "snowy_mp__allow_reviving"
	StaticText ""
	
	StaticText "Item Drops On Death", 1
	Option "Allow Dropping Items On Death", "snowy_mp__drop_items_on_death", YesNo
	Option "Drop Items On Death After Game over", "snowy_mp__drop_items_during_game_over", YesNo, "snowy_mp__drop_items_on_death"
	Option "Drop Weapons On Death", "snowy_mp__death_drop_all", YesNo, "snowy_mp__drop_items_on_death"
	Option "Drop Ammo On Death", "snowy_mp__death_drop_ammo", YesNo, "snowy_mp__drop_items_on_death"
	Option "Drop Key Items On Death", "snowy_mp__death_drop_keys", YesNo, "snowy_mp__drop_items_on_death"
